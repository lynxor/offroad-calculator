!!!
html
  head
    block title
    include include/header
    block scripts

  body
    .navbar.navbar-inverse
      .navbar-inner
        ul.nav
          li.active
            a(href='/') Home
          li
            a(href='/tiresize') Tire compare
          li
            a(href='/angles') Angles(experimental)
          li
            a(href='/vehicles') Vehicles
          li
            a(href='/fuel') Fuel
          if admin
            li
              a(href='/vehicles/new') Add Vehicles
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown",href="#") Administration
                b.caret
              ul.dropdown-menu
                li: a(href="/admin") Users
        .user
          if user
            span.username
              a(href="/profile/#{user.email}") #{user.email}
            .btn
              a(href="/logout") Logout
          else
            div
              a.btn.btn-primary(href="/login") Login

    div(class="container")
      block content

  script
    $(".dropdown-toggle").dropdown();
